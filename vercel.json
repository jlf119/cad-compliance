{
  "version": 2,
  "builds": [
    { "src": "app/api/**/*.ts", "use": "@vercel/node" },
    { "src": "api/app.js", "use": "@vercel/node" },
    { "src": "next.config.ts", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/app.js" },
    { "src": "/(.*)", "dest": "/app/$1" }
  ]
}
